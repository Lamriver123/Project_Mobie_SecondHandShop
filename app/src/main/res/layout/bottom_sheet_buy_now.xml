<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Handle bar -->
    <View
        android:layout_width="36dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="#CCCCCC"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#CCCCCC"
        android:clipToOutline="true"
        android:scaleY="1.0" />

    <!-- Product Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgProduct1"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Corner4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xe máy điện VinFast"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200 000 VND"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="16dp" />

    <!-- Quantity Selector -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng:"
            android:textSize="14sp"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/layoutQuantity"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="210dp"
            android:background="@drawable/bg_quantity_selector"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/buttonDecrease"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_remove"
                android:contentDescription="Giảm"
                app:tint="#000000" />

            <TextView
                android:id="@+id/textViewQuantity"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textSize="14sp"
                android:textColor="#000000" />

            <ImageButton
                android:id="@+id/buttonIncrease"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_add"
                android:contentDescription="Tăng"
                app:tint="#000000" />
        </LinearLayout>
    </LinearLayout>

    <!-- Tổng tiền -->
    <TextView
        android:id="@+id/txtTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: 200 000 VND"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:gravity="end"
        android:layout_marginTop="12dp" />

    <!-- Button -->
    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mua ngay"
        android:textColor="@color/white"
        android:backgroundTint="@color/yellow"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:enabled="false" />
</LinearLayout>
