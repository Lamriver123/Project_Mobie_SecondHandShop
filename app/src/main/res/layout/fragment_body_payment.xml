<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/layoutPaymentBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F9F9F9">

        <!-- Địa chỉ giao hàng -->
        <LinearLayout
            android:id="@+id/btnChooseLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/card_background"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/txtAddressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ nhận hàng"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyễn Văn A, 123 Đường ABC, Quận 1, TP.HCM" />
            </LinearLayout>

        </LinearLayout>

        <!-- Danh sách sản phẩm theo shop -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Shop name & order status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_store"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:id="@+id/txtShopName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Henry Shop"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtOrderStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_order_status"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:text="Chờ xác nhận"
                            android:textColor="@color/yellow"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginVertical="8dp"
                        android:background="#CCCCCC" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        xmlns:app="http://schemas.android.com/apk/res-auto">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingVertical="4dp">
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/imgProduct1"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:scaleType="centerCrop"
                                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Corner4dp"
                                    android:src="@drawable/img"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingStart="12dp">

                                    <TextView
                                        android:id="@+id/txtProductName1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Dép đi trong nhà..."
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp"
                                        android:maxLines="2"
                                        android:ellipsize="end" />

                                    <TextView
                                        android:id="@+id/txtProductVariation1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Màu xanh, Size 41"
                                        android:textColor="#777777"
                                        android:textSize="12sp"
                                        android:layout_marginTop="4dp" />

                                    <TextView
                                        android:id="@+id/txtProductQuantity1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="x3"
                                        android:textColor="#777777"
                                        android:textSize="12sp"
                                        android:layout_marginTop="2dp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/txtProductPrice1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₫22.500"
                                    android:textColor="@android:color/black"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical"
                                    android:paddingEnd="4dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingVertical="4dp">
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/imgProduct"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:scaleType="centerCrop"
                                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Corner4dp"
                                    android:src="@drawable/img"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingStart="12dp">

                                    <TextView
                                        android:id="@+id/txtProductName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Dép đi trong nhà..."
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp"
                                        android:maxLines="2"
                                        android:ellipsize="end" />

                                    <TextView
                                        android:id="@+id/txtProductVariation"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Màu xanh, Size 41"
                                        android:textColor="#777777"
                                        android:textSize="12sp"
                                        android:layout_marginTop="4dp" />

                                    <TextView
                                        android:id="@+id/txtProductQuantity"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="x3"
                                        android:textColor="#777777"
                                        android:textSize="12sp"
                                        android:layout_marginTop="2dp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/txtProductPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₫22.500"
                                    android:textColor="@android:color/black"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical"
                                    android:paddingEnd="4dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:id="@+id/btnViewMoreProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem thêm sản phẩm"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:visibility="gone" />


                    <!-- Actions -->
                    <LinearLayout
                        android:id="@+id/layoutActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hủy đơn"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@color/red"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btnConfirmReceived"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã nhận hàng"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@color/blue_sky"
                            android:layout_marginStart="8dp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btnReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đánh giá"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@color/yellow"
                            android:layout_marginStart="8dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/recyclerOrder"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:nestedScrollingEnabled="false" />-->
        <!-- Ghi chú -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:background="@drawable/card_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ghi chú"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editNote"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_edittext"
                android:hint="Ghi chú cho người bán"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:paddingBottom="15dp"/>
        </LinearLayout>

        <!-- Tóm tắt đơn hàng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:background="@drawable/card_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tóm tắt đơn hàng"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTotalProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng tiền sản phẩm: 400.000 VND"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/txtShipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phí vận chuyển: 30.000 VND"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtOrderTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng tiền đơn hàng: 430.000 VND"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Phương thức thanh toán -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:background="@drawable/card_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroupPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/momo" />

                    <RadioButton
                        android:id="@+id/radioMomo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ví MoMo"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/vnpay" />

                    <RadioButton
                        android:id="@+id/radioBank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh toán vnpay"
                        android:layout_marginStart="8dp"
                        android:checked="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/cod" />

                    <RadioButton
                        android:id="@+id/radioCod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh toán khi nhận hàng (COD)"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
