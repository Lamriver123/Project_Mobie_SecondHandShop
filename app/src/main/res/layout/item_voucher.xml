<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_edittext"
    android:layout_marginBottom="8dp">

    <!-- Hình ảnh voucher bên trái -->
<!--    <ImageView-->
<!--        android:id="@+id/imgVoucherIcon"-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="100dp"-->
<!--        android:layout_marginEnd="12dp"-->
<!--        android:src="@drawable/bg_voucher2"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:contentDescription="Voucher Icon" />-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Code và Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtVoucherCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CODE123"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtVoucherStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_status"
                android:padding="4dp"
                android:text="ACTIVE"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/txtVoucherDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả voucher"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Discount Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/txtDiscountInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảm 10% tối đa 50.000đ"
                android:textSize="14sp"
                android:textColor="#FF5722" />

            <TextView
                android:id="@+id/txtMinimumOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn tối thiểu: 200.000đ"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Validity and Quantity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/txtVoucherValidity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HSD: 31/12/2024"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/txtVoucherQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Còn lại: 100"
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>

    <RadioButton
        android:id="@+id/radioVoucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

</LinearLayout> 