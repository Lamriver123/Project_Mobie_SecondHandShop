<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:padding="8dp"
    android:background="#F7F7F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Banner / Slider -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerImages"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:layout_marginBottom="12dp"
            android:background="#FFFFFF"
            android:elevation="2dp" />

        <!-- Loại hình ảnh (Hiện tại / Lúc mới mua) -->
        <RadioGroup
            android:id="@+id/imageTypeSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ảnh hiện tại"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioOriginal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ảnh lúc mới mua"
                android:layout_marginStart="16dp" />
        </RadioGroup>

        <!-- Tên + Giá -->
        <TextView
            android:id="@+id/textProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPPO Reno Z"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/textProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.200.000 ₫"
            android:textColor="#E53935"
            android:textSize="18sp"
            android:layout_marginTop="4dp" />



        <!-- Người bán -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:elevation="1dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/name"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_white"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Hải"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Hoạt động 4 giờ trước"
                    android:textSize="14sp"
                    android:textColor="#757575" />
            </LinearLayout>

            <TextView
                android:id="@+id/btnViewShop"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/bg_filter_button"
                android:text="Xem trang"
                android:drawablePadding="4dp"
                android:textColor="#666666"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin chi tiết"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/tableProductDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:elevation="1dp">

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sản phẩm tương tự"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="8dp" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/similar_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" />

    </LinearLayout>
</ScrollView>
