<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <!-- Bọc các view con vào một LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- LinearLayout chứa các view sản phẩm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hình ảnh sản phẩm -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerImages"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="8dp" />


            <RadioGroup
                android:id="@+id/imageTypeSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <RadioButton
                    android:id="@+id/radioCurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ảnh hiện tại"
                    android:layout_margin="8dp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioOriginal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Ảnh lúc mới mua" />
            </RadioGroup>


            <!-- Tên và giá sản phẩm -->
            <TextView
                android:id="@+id/textProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OPPO Reno Z"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.200.000 ₫"
                android:textSize="18sp"
                android:textColor="#E53935"
                android:layout_marginTop="4dp" />

            <!-- Nút lưu tin -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/buttonAddToCart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFA000"
                    android:drawableLeft="@drawable/icon_cart"
                    android:text="Thêm vào giỏ"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/buttonBuyNow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:text="Mua ngay"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_heart_border_red"
                android:text="Lưu tin"
                android:textColor="#E53935" />

            <!-- Thông tin người bán -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/name"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hải"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoạt động 4 giờ trước"
                        android:textSize="14sp"
                        android:textColor="#777777" />
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem trang"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Máy Chính Hãng RAM 8G, 256G\nFull Box sạc cáp đầy đủ\nMáy đang sử dụng bình thường\nMua máy Nhắn Tin/Zalo: 09xxxxxxx\nCó hỗ trợ giao hàng tận nơi"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản phẩm tương tự"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp" />

            <!-- FragmentContainerView cho NewProductFragment -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/new_product_fragment"
                android:name="com.example.marketplacesecondhand.fragment.NewProductFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
